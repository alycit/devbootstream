      console.log(data);
    });
  </script>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>


<body>
<%= render 'shared/header' %>

<div id='container'>
  <%= yield %>
</div> 
  <div id='pagination'>
    <a href="http://127.0.0.1:3000/?start=1">test</a>
