

<% @posts.each do |post| %>
  <% @post = post %>

    <% source = @post.source %>

<div class="grid">

      <% if source == 'tumblr' %>
        <%= render 'shared/tumblr' %>
      <% end %>

      <% if source == 'twitter' %>
        <%= render 'shared/twitter' %>
      <% end %>

      <% if source == 'instagram' %>
        <%= render 'shared/instagram' %>
      <% end %>

</div>


<% end %>   